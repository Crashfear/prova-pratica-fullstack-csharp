
@model IPC.Correios.Application.ViewModels.EnderecoViewModel

@{
    ViewBag.Title = "Resultado Busca";
}


@using (Html.BeginForm())
{
    <div id="print-content">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => Model.Logradouro)
            @Html.TextBoxFor(model => model.Logradouro, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Município / UF")
            @Html.TextBoxFor(model => model.DisplayMunicipioUf, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bairro)
            @Html.TextBoxFor(model => model.Bairro, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cep)
            @Html.TextBoxFor(model => model.Cep, new { @class = "form-control" })
        </div>
    </div>
    <div class="btn-container" role="group">
        @Html.ActionLink("Nova Busca", "BuscarEndereco", "BuscadorCEP", "", new { @class = "btn btn-primary" })
        <input type="button" value="imprimir" onclick="printDiv('print-content')" class="btn btn-primary" />
    </div>
}

@section scripts{
    <script type="text/javascript">
        function printDiv(divName) {
            var printContents = document.getElementById(divName).innerHTML;
            w = window.open();
            w.document.write(printContents);
            w.print();
            w.close();
        }
    </script>
}